{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	- Admin - Mon Profil :
	{{app.user.firstName}}
	{{app.user.lastName}}
{% endblock %}


{% block main %}
	<h1 class="text-center my-3 display-5">Mon Profil :
		{{app.user.firstName}}
		{{app.user.lastName}}</h1>


	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 mx-auto">
				{% for message in app.flashes('success') %}
					<div class="text-center alert alert-success alert-dismissible fade show" role="alert">
						{{message}}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
				<div class="card">
					<div class="card-header bg-secondary text-white">
						Profil
					</div>
					<div class="card-body">
						<p class="card-text">
							<strong>Pr√©nom</strong>
							:
							{{app.user.firstName}}</p>
						<p class="card-text">
							<strong>Nom</strong>
							:
							{{app.user.lastName}}</p>
						<p class="card-text">
							<strong>Email</strong>
							:
							{{app.user.email}}</p>
						<a href="{{path('admin.profile.edit')}}" class="m-2 btn btn-primary">Modifier le profil</a>
						<a href="{{path('admin.profile.edit_password')}}" class="m-2 btn btn-secondary">Modifier le mot de passe</a>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
