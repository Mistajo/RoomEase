{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	- Espace Admin - Modification d'un equipement
{% endblock %}

{% block main %}

	<!-- Breadcrumb-->
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class='ms-5 my-4'>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{path('admin.home.dashboard')}}">Tableau de bord</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('admin.equipments.index')}}">Liste des equipements</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Modification d'un equipement</li>
		</ol>
	</nav>
	<!-- Fin Breadcrumb-->


	<h1 class="text-center my-3 display-5">Modification d'un Equipement</h1>

	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 mx-auto">
				{{form_start(form)}}
				<div class="mb-3">
					<label for="equipment_form_name">Nom</label>
					<div class="text-danger">{{form_errors(form.name)}}</div>
					{{form_widget(form.name, {'attr': {'class':'form-control'}})}}
				</div>
				<div class="mb-3">
					<input formnovalidate type="submit" class="btn btn-secondary" value="Modifier">
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
