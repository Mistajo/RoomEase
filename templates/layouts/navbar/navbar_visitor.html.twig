{% set pathInfo = app.request.pathInfo %}
<nav class="navbar navbar-expand-lg bg-secondary">
	<div class="container-fluid">
		<a class="navbar-brand col-md-3 col-lg-2 my-1 fs-6" href="{{path('visitor.welcome.index')}}">
			<img src="{{asset("Logo/RoomEase_Logo.png")}}" alt="RoomEase Logo" class="w-50 h-25"></a>
		<button class="navbar-toggler ms-1 bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item ms-1">
					<a class="nav-link text-white {{pathInfo ==path('visitor.welcome.index') ? 'active' : " "}}" {{pathInfo ==path('visitor.welcome.index') ? 'aria-current="page"' : " "}} href="{{path('visitor.welcome.index')}}">Accueil</a>
				</li>
				<li class="nav-item ms-1">
					<a class="nav-link text-white {{pathInfo == path('visitor.about.index') ? 'active' : '' }}" {{pathInfo == path('visitor.about.index') ? 'aria-current="page"' : '' }} href="{{path('visitor.about.index')}}">A Propos</a>
				</li>
				<li class="nav-item ms-1">
					<a class="nav-link text-white {{pathInfo == path('visitor.contact.create') ? 'active' : '' }}" {{pathInfo == path('visitor.contact.create') ? 'aria-current="page"' : '' }} href="{{path('visitor.contact.create')}}">Contact</a>

				</li>
			</ul>
			<div class="ms-auto">
				{% if app.user %}
					<ul class="navbar-nav ms-1">
						<li class="nav-item dropdown">
							<a href="" class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static">
								<i class="fa-solid fa-user-secret">
									Bonjour,
									{{app.user.firstName}}</i>
							</a>
							<ul class="dropdown-menu dropdown-menu-end">
								{% if is_granted('ROLE_ADMIN') %}
									<li>
										<a class="dropdown-item" href="{{path('admin.profile.index')}}">Mon Profil</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{path('admin.home.dashboard')}}">Espace Admin</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{path('admin.setting.index')}}">Paramètre du Site</a>
									</li>
								{% elseif is_granted('ROLE_USER') %}
									<li>
										<a class="dropdown-item" href="{{path('user.profile.index')}}">Mon Profil</a>
									</li>
								{% endif %}
								<li>
									<a class="dropdown-item" href="{{path('user.home.index')}}">Espace Utilisateur</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('app_logout')}}">Déconnexion</a>
								</li>
							</ul>
						</li>
					</ul>
				{% else %}
					<a href="{{path('visitor.authentication.login')}}" class="btn btn-primary my-3 my-lg-0">Connexion</a>
					<a href="{{path('visitor.registration.register')}}" class="btn btn-light my-3 my-lg-0 mx-lg-2">Inscription</a>
				{% endif %}

			</div>

		</div>
	</div>
</nav>
